<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    tools:context=".MainActivity">



            <RelativeLayout
                android:id="@+id/titleBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="@string/basic_calculator"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    tools:ignore="RelativeOverlap" />

                <ImageView
                    android:id="@+id/btnHistory"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="5dp"
                    android:src="@drawable/history"
                    tools:ignore="ContentDescription" />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/displayLyt"
                android:layout_width="match_parent"
                android:layout_height="250dp">

                <TextView
                    android:id="@+id/answerDisplay"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_below="@+id/titleBar"
                    android:layout_marginTop="10dp"
                    android:paddingEnd="15dp"
                    android:text="@string/_0"
                    android:textAlignment="viewEnd"
                    android:textColor="@color/white"
                    android:textSize="30sp"
                    tools:ignore="NotSibling,RtlSymmetry,TextSizeCheck" />

                <EditText
                    android:focusable="false"
                    android:scrollHorizontally="true"
                    android:clickable="false"
                    android:singleLine="true"
                    android:id="@+id/edtMainDisplay"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_below="@+id/answerDisplay"
                    android:layout_marginTop="10dp"
                    android:hint="@string/a"
                    android:importantForAutofill="no"
                    android:inputType="number"
                    android:paddingEnd="10dp"
                    android:textAlignment="viewEnd"
                    android:textColor="@color/Orange"
                    android:textColorHint="@color/Orange"
                    android:textSize="60sp"
                    tools:ignore="RtlSymmetry,TextFields,DuplicateSpeakableTextCheck,VisualLintTextFieldSize" />

                <TableLayout
                    android:layout_below="@id/edtMainDisplay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="35dp"
                    >

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:ignore="UselessParent">

                        <ImageView
                            android:id="@+id/btnBasic"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_weight="1"
                            android:background="@drawable/selected"
                            android:contentDescription="@string/todo"
                            android:src="@drawable/basic" />

                        <ImageView
                            android:id="@+id/btnScientific"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_weight="1"
                            android:contentDescription="@string/scue"
                            android:src="@drawable/scientific" />

                        <ImageView
                            android:id="@+id/btnBmi"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_weight="1"
                            android:src="@drawable/bmi"
                            tools:ignore="ContentDescription" />

                        <ImageView
                            android:id="@+id/btnPrograming"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_weight="1"
                            android:contentDescription="TODO"
                            android:src="@drawable/programing"
                            tools:ignore="ContentDescription,HardcodedText" />
                    </TableRow>

                </TableLayout>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/keybord"
                android:gravity="bottom"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:orientation="vertical">

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="1pt"
                        tools:ignore="UselessParent">

                        <Button
                            android:id="@+id/btnAC"
                            android:layout_width="30pt"
                            android:layout_height="30pt"
                            android:layout_marginEnd="1pt"
                            android:layout_weight="1"
                            android:background="@drawable/button_layout"
                            android:backgroundTint="@color/Orange"
                            android:text="@string/ac"
                            android:textSize="20sp"
                            tools:ignore="ButtonStyle,VisualLintButtonSize,TextContrastCheck" />

                        <Button
                            android:onClick="numberEvent"
                            android:id="@+id/btnDot"
                            android:layout_width="30pt"
                            android:layout_height="30pt"
                            android:layout_marginRight="1pt"
                            android:layout_weight="1"
                            android:background="@drawable/button_layout"
                            android:backgroundTint="@color/Orange"
                            android:text="@string/point"
                            android:textSize="20sp"
                            tools:ignore="ButtonStyle,RtlHardcoded,VisualLintButtonSize,TextContrastCheck" />

                        <Button
                            android:id="@+id/btnDivide"
                            android:layout_width="30pt"
                            android:layout_height="30pt"
                            android:layout_marginRight="1pt"
                            android:layout_weight="1"
                            android:background="@drawable/button_layout"
                            android:backgroundTint="@color/Orange"
                            android:text="@string/divide"
                            android:onClick="oppEvent"
                            android:textSize="20sp"
                            tools:ignore="ButtonStyle,RtlHardcoded,VisualLintButtonSize,TextContrastCheck" />

                        <Button
                            android:id="@+id/btnDelete"
                            android:layout_width="30pt"
                            android:layout_height="30pt"
                            android:layout_marginEnd="1pt"
                            android:layout_weight="1"
                            android:background="@drawable/button_layout"
                            android:backgroundTint="@color/Orange"
                            android:text="@string/delete"
                            android:textSize="25sp"
                            tools:ignore="ButtonStyle,VisualLintButtonSize,TextContrastCheck" />
                    </TableRow>


                </TableLayout>

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="1pt"
                        tools:ignore="UselessParent">

                        <Button
                            android:onClick="numberEvent"
                            android:id="@+id/btn7"
                            android:layout_width="30pt"
                            android:layout_height="30pt"
                            android:layout_marginEnd="1pt"
                            android:layout_weight="1"
                            android:background="@drawable/button_layout"
                            android:backgroundTint="@color/Orange"
                            android:text="@string/_7"
                            android:textSize="20sp"
                            tools:ignore="ButtonStyle,VisualLintButtonSize,TextContrastCheck" />

                        <Button
                            android:onClick="numberEvent"
                            android:id="@+id/btn8"
                            android:layout_width="30pt"
                            android:layout_height="30pt"
                            android:layout_marginEnd="1pt"
                            android:layout_weight="1"
                            android:background="@drawable/button_layout"
                            android:backgroundTint="@color/Orange"
                            android:text="@string/_8"
                            android:textSize="20sp"
                            tools:ignore="ButtonStyle,VisualLintButtonSize,TextContrastCheck" />

                        <Button
                            android:onClick="numberEvent"
                            android:id="@+id/btn9"
                            android:layout_width="30pt"
                            android:layout_height="30pt"
                            android:layout_marginEnd="1pt"
                            android:layout_weight="1"
                            android:background="@drawable/button_layout"
                            android:backgroundTint="@color/Orange"
                            android:text="@string/_9"
                            android:textSize="20sp"
                            tools:ignore="ButtonStyle,VisualLintButtonSize,TextContrastCheck" />

                        <Button
                            android:onClick="oppEvent"
                            android:id="@+id/btnMinus"
                            android:layout_width="30pt"
                            android:layout_height="30pt"
                            android:layout_marginEnd="1pt"
                            android:layout_weight="1"
                            android:background="@drawable/button_layout"
                            android:backgroundTint="@color/Orange"
                            android:text="@string/minus"
                            android:textSize="20sp"
                            tools:ignore="ButtonStyle,VisualLintButtonSize,TextContrastCheck" />
                    </TableRow>


                </TableLayout>

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="1pt"
                        tools:ignore="UselessParent">

                        <Button
                            android:onClick="numberEvent"
                            android:id="@+id/btn4"
                            android:layout_width="30pt"
                            android:layout_height="30pt"
                            android:layout_marginEnd="1pt"
                            android:layout_weight="1"
                            android:background="@drawable/button_layout"
                            android:backgroundTint="@color/Orange"
                            android:text="@string/_4"
                            android:textSize="20sp"
                            tools:ignore="ButtonStyle,VisualLintButtonSize,TextContrastCheck" />

                        <Button
                            android:onClick="numberEvent"
                            android:id="@+id/btn5"
                            android:layout_width="30pt"
                            android:layout_height="30pt"
                            android:layout_marginEnd="1pt"
                            android:layout_weight="1"
                            android:background="@drawable/button_layout"
                            android:backgroundTint="@color/Orange"
                            android:text="@string/_5"
                            android:textSize="20sp"
                            tools:ignore="ButtonStyle,VisualLintButtonSize,TextContrastCheck" />

                        <Button
                            android:onClick="numberEvent"
                            android:id="@+id/btn6"
                            android:layout_width="30pt"
                            android:layout_height="30pt"
                            android:layout_marginEnd="1pt"
                            android:layout_weight="1"
                            android:background="@drawable/button_layout"
                            android:backgroundTint="@color/Orange"
                            android:text="@string/_6"
                            android:textSize="20sp"
                            tools:ignore="ButtonStyle,VisualLintButtonSize,TextContrastCheck" />

                        <Button
                            android:onClick="oppEvent"
                            android:id="@+id/btnMultiply"
                            android:layout_width="30pt"
                            android:layout_height="30pt"
                            android:layout_marginEnd="1pt"
                            android:layout_weight="1"
                            android:background="@drawable/button_layout"
                            android:backgroundTint="@color/Orange"
                            android:text="@string/multiply"
                            android:textSize="20sp"
                            tools:ignore="ButtonStyle,VisualLintButtonSize,TextContrastCheck" />
                    </TableRow>


                </TableLayout>

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="1pt"
                        tools:ignore="UselessParent">

                        <Button
                            android:onClick="numberEvent"
                            android:id="@+id/btn1"
                            android:layout_width="30pt"
                            android:layout_height="30pt"
                            android:layout_marginEnd="1pt"
                            android:layout_weight="1"
                            android:background="@drawable/button_layout"
                            android:backgroundTint="@color/Orange"
                            android:text="@string/_1"
                            android:textSize="20sp"
                            tools:ignore="ButtonStyle,VisualLintButtonSize,TextContrastCheck" />

                        <Button
                            android:onClick="numberEvent"
                            android:id="@+id/btn2"
                            android:layout_width="30pt"
                            android:layout_height="30pt"
                            android:layout_marginEnd="1pt"
                            android:layout_weight="1"
                            android:background="@drawable/button_layout"
                            android:backgroundTint="@color/Orange"
                            android:text="@string/_2"
                            android:textSize="20sp"
                            tools:ignore="ButtonStyle,VisualLintButtonSize,TextContrastCheck" />

                        <Button
                            android:onClick="numberEvent"
                            android:id="@+id/btn3"
                            android:layout_width="30pt"
                            android:layout_height="30pt"
                            android:layout_marginEnd="1pt"
                            android:layout_weight="1"
                            android:background="@drawable/button_layout"
                            android:backgroundTint="@color/Orange"
                            android:text="@string/_3"
                            android:textSize="20sp"
                            tools:ignore="ButtonStyle,VisualLintButtonSize,TextContrastCheck" />

                        <Button
                            android:onClick="oppEvent"
                            android:id="@+id/btnPlus"
                            android:layout_width="30pt"
                            android:layout_height="30pt"
                            android:layout_marginEnd="1pt"
                            android:layout_weight="1"
                            android:background="@drawable/button_layout"
                            android:backgroundTint="@color/Orange"
                            android:text="@string/plus"
                            android:textColor="@color/white"
                            android:textSize="20sp"
                            tools:ignore="ButtonStyle,VisualLintButtonSize,TextContrastCheck" />
                    </TableRow>


                </TableLayout>

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="1pt"
                        tools:ignore="UselessParent">



                        <Button
                            android:id="@+id/btnModule"
                            android:layout_width="30pt"
                            android:layout_height="30pt"
                            android:layout_marginEnd="1pt"
                            android:layout_weight="1"
                            android:background="@drawable/button_layout"
                            android:backgroundTint="@color/Orange"
                            android:text="@string/modulas"
                            android:textSize="20sp"
                            tools:ignore="ButtonStyle,VisualLintButtonSize,TextContrastCheck" />

                        <Button
                            android:onClick="numberEvent"
                            android:id="@+id/btn0"
                            android:layout_width="30pt"
                            android:layout_height="30pt"
                            android:layout_marginEnd="1pt"
                            android:layout_weight="1"
                            android:background="@drawable/button_layout"
                            android:backgroundTint="@color/Orange"
                            android:text="@string/zero"
                            android:textSize="20sp"
                            tools:ignore="ButtonStyle,VisualLintButtonSize,TextContrastCheck,DuplicateSpeakableTextCheck" />

                        <Button
                            android:onClick="equalEvent"
                            android:id="@+id/btnEquals"
                            android:layout_width="30pt"
                            android:layout_height="30pt"
                            android:layout_marginEnd="1pt"
                            android:layout_weight="1"
                            android:background="@drawable/button_layout"
                            android:backgroundTint="@color/Orange"
                            android:text="@string/equals"
                            android:textSize="20sp"
                            tools:ignore="ButtonStyle,VisualLintButtonSize,TextContrastCheck" />
                    </TableRow>
                </TableLayout>
            </LinearLayout>
        </LinearLayout>
